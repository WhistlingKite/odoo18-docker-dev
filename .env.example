# Required Database Configuration
DB_HOST=db
DB_PORT=5432
DB_USER=odoo
DB_PASSWORD=odoo
DB_NAME=False

# Security Configuration
ADMIN_PASSWORD=admin@123    # Master password for database operations
LIST_DB=True               # Whether to show database selector

# Server Configuration
HTTP_PORT=8069             # Default: 8069
PROXY_MODE=True            # Default: True
LOG_LEVEL=info            # Default: info (options: info, debug, warning, error, critical)
LOG_FILE=False            # Default: False (set to path if you want file logging)

# Performance Tuning (all optional with defaults)
MAX_CRON_THREADS=0        # Default: 0
WORKERS=0                 # Default: 0 (auto-configured based on CPU cores)
LIMIT_MEMORY_HARD=2684354560  # Default: 2684354560 (2.5GB)
LIMIT_MEMORY_SOFT=2147483648  # Default: 2147483648 (2GB)
LIMIT_REQUEST=8192        # Default: 8192
LIMIT_TIME_CPU=60         # Default: 60
LIMIT_TIME_REAL=120       # Default: 120
LIMIT_TIME_REAL_CRON=120  # Default: 120

# Email Configuration (all optional)
SMTP_SERVER=False         # Default: False
SMTP_PORT=25             # Default: 25
SMTP_USER=False          # Default: False
SMTP_PASSWORD=False      # Default: False
SMTP_SSL=False           # Default: False
EMAIL_FROM=False         # Default: False
